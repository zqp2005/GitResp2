<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zqp.mapper.UserMapper">
    <select id="selectAllUsers" resultType="User">
        select * from t_user
    </select>
    <select id="selectUserById" resultType="User">
        select * from t_user where id=#{id}
    </select>
    <insert id="insertUser" parameterType="User">
    insert into t_user (id,uname,pwd,realname,identity) values(#{id},#{uname},#{pwd},#{realname},#{identity})
    </insert>
    <update id="updateUser" parameterType="User">
    update t_user set uname=#{uname},pwd=#{pwd}  realname= #{realname},identity= #{identity}where id=#{id}
    </update>
    <delete id="deleteUser" parameterType="Integer">
        delete from t_user where id=#{id}
    </delete>
</mapper>